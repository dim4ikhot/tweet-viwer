<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/img_avatar"
            android:focusable="false"
            android:scaleType="fitXY" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/full_name"
                android:textStyle="bold"
                android:textSize="20sp"
                android:focusable="false"
                android:clickable="false"
                android:textColor="@android:color/black"
                android:hint="Full name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/screen_name"
                android:textStyle="bold"
                android:focusable="false"
                android:clickable="false"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:hint="Scree name"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:id="@+id/tweet_text"
                android:focusable="false"
                android:clickable="false"
                android:textSize="18sp"
                android:hint="tweet text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tweet_user_link"
                    android:layout_marginLeft="5dp"
                    android:focusable="false"
                    android:clickable="false"
                    android:textSize="18sp"
                    android:hint="tweet link"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tweet_link"
                    android:layout_marginLeft="5dp"
                    android:focusable="false"
                    android:textSize="18sp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:hint="tweet link"/>

            </LinearLayout>

        </LinearLayout>

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:id="@+id/img_of_tweet"
                android:scaleType="fitXY"
                android:focusable="false" />

        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_answer_tweet"
                    android:focusable="false"
                    android:src="@mipmap/ic_reply"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:id="@+id/img_retweet"
                    android:src="@mipmap/ic_repeat"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/retweets_count"
                    android:focusable="false"
                    android:clickable="false"
                    android:text="000"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:id="@+id/img_like_tweet"
                    android:src="@mipmap/ic_favorite_border"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:focusable="false"
                    android:clickable="false"
                    android:id="@+id/likes_count"
                    android:text="000"
                    android:textColor="@android:color/darker_gray"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/img_add_friend"
                android:visibility="gone"
                android:focusable="false"
                android:src="@mipmap/ic_person_add"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>